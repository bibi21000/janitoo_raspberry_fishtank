#!/bin/sh

### BEGIN INIT INFO
# Provides:		jnt_fishtank
# Required-Start:	$remote_fs $syslog $network
# Required-Stop:	$remote_fs $syslog $network
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description:	Janitoo fishtank
# Description:		Janitoo fishtank appliance server
#
### END INIT INFO

set -e

NAME="jnt_fishtank"
DAEMON="/usr/bin/${NAME}"
test -x "${DAEMON}" || DAEMON="/usr/local/bin/${NAME}"
PATH="/sbin:/bin:/usr/sbin:/usr/bin"
CONFFILE="/opt/janitoo/etc/janitoo_fishtank.conf"

test -x "${DAEMON}" || exit 0

case "${1}" in
	start)
		echo -n "Starting Janitoo fishtank server: "
		${DAEMON} -c ${CONFFILE} start
		echo "${NAME}."
		;;

	stop)
		echo -n "Stopping Janitoo fishtank server: "
		${DAEMON} -c ${CONFFILE} stop
		echo "${NAME}."
		;;

	restart)
		echo -n "Restarting Janitoo fishtank server: "
		${DAEMON} -c ${CONFFILE} restart
		echo "${NAME}."
		;;

	reload|force-reload)
		echo -n "Reloading Janitoo fishtank server: "
		${DAEMON} -c ${CONFFILE} reload
		echo "${NAME}."
		;;

	kill)
		echo -n "Kill Janitoo fishtank server: "
		${DAEMON} -c ${CONFFILE} kill
		echo "${NAME}."
		;;

	status)
		PID="$(cat /opt/janitoo/run/${NAME}.pid 2>/dev/null)" || true

		if [ ! -f /opt/janitoo/run/${NAME}.pid ] || [ -z "${PID}" ]
		then
			echo "${NAME} is not running"
			exit 3
		fi

		if ps "${PID}" >/dev/null 2>&1
		then
			echo "${NAME} is running"
			exit 0
		else
			echo "${NAME} is not running"
			exit 1
		fi
		;;

	*)
		echo "Usage: /etc/init.d/${NAME} {start|stop|restart|reload|status|kill}"
		exit 1
		;;
esac

exit 0
